{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"baseUrl": ".",
		"paths": {
			"@firebase/auth": [
				"node_modules/@firebase/auth/dist/index.rn.d.ts"
			],
			"@FirebaseConfig": ["FirebaseConfig.ts"],
			"@app/*": ["app/*"],
			"@assets/*": ["assets/*"],
			"@components/*": ["components/*"],
			"@context/*": ["context/*"],
			"@constants/*": ["constants/*"],
			"@utils/*": ["utils/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}
